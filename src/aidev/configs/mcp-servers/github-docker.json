{
  "name": "github-docker",
  "description": "GitHub API integration via Docker container",
  "type": "stdio",
  "command": "docker",
  "args": ["run", "-i", "--rm", "-e", "GITHUB_PERSONAL_ACCESS_TOKEN", "ghcr.io/github/github-mcp-server"],
  "env": {
    "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN:-${GITHUB_TOKEN}}"
  },
  "notes": {
    "requirement": "Docker Desktop must be running",
    "scopes": "PAT requires 'repo' scope"
  }
}
