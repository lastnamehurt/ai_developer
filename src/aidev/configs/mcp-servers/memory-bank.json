{
  "name": "memory-bank",
  "description": "Persistent memory bank for long-term context",
  "type": "stdio",
  "command": "npx",
  "args": ["-y", "@allpepper/memory-bank-mcp"],
  "repository": "https://github.com/alioshr/memory-bank-mcp",
  "env": {
    "MEMORY_BANK_ROOT": "${MEMORY_BANK_ROOT:-${HOME}/.aidev/memory-banks}"
  },
  "autoApprove": [
    "memory_bank_read",
    "memory_bank_write",
    "memory_bank_update",
    "list_projects",
    "list_project_files"
  ]
}
