{
  "name": "security-research",
  "description": "Security research and penetration testing",
  "extends": "researcher",
  "mcp_servers": [
    {
      "name": "filesystem",
      "enabled": true
    },
    {
      "name": "git",
      "enabled": true
    },
    {
      "name": "web-search",
      "enabled": true,
      "config": {
        "searchEngines": [
          "google",
          "shodan"
        ]
      }
    },
    {
      "name": "vulnerability-db",
      "enabled": true,
      "config": {
        "databases": [
          "nvd",
          "cve"
        ]
      }
    },
    {
      "name": "memory",
      "enabled": true,
      "config": {
        "MEMORY_FILE_PATH": "~/.aidev/shared_memory.jsonl"
      }
    }
  ],
  "environment": {
    "SHODAN_API_KEY": "${SHODAN_API_KEY}",
    "VIRUSTOTAL_API_KEY": "${VIRUSTOTAL_API_KEY}",
    "NVD_API_KEY": "${NVD_API_KEY}"
  },
  "tools": {
    "cursor": {
      "enabled": true
    },
    "claude": {
      "enabled": true
    }
  }
}
