{
  "name": "api-engineer",
  "description": "For designing, validating, and testing REST/GraphQL/gRPC APIs",
  "tags": [
    "api",
    "backend",
    "testing",
    "web"
  ],
  "mcp_servers": [
    {
      "name": "filesystem",
      "enabled": true
    },
    {
      "name": "git",
      "enabled": true
    },
    {
      "name": "github",
      "enabled": true
    },
    {
      "name": "postgres",
      "enabled": true
    },
    {
      "name": "memory-bank",
      "enabled": true
    }
  ],
  "environment": {
    "GITHUB_TOKEN": "${GITHUB_TOKEN}",
    "POSTGRES_URL": "${POSTGRES_URL}"
  },
  "tools": {
    "cursor": {
      "enabled": true
    }
  }
}
