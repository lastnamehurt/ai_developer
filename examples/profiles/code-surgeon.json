      "name": "github",
      "enabled": true
    },
    {
      "name": "memory-bank",
      "enabled": true
    }
  ],
  "environment": {
    "GITHUB_TOKEN": "${GITHUB_TOKEN}"
  },
  "tools": {
    "cursor": {
      "enabled": true
    }
  }
}
