# Global aidev environment variables
# Save this to: ~/.aidev/.env
# These are available to all projects and profiles

# ============================================================================
# Git Configuration
# ============================================================================
GIT_AUTHOR_NAME="Your Name"
GIT_AUTHOR_EMAIL="your.email@example.com"

# ============================================================================
# GitHub
# ============================================================================
GITHUB_TOKEN="ghp_your_github_personal_access_token_here"
GITHUB_USERNAME="your-github-username"

# ============================================================================
# GitLab (if using)
# ============================================================================
GITLAB_TOKEN="glpat-your_gitlab_token_here"
GITLAB_URL="https://gitlab.com"

# ============================================================================
# Cloud Providers
# ============================================================================

# AWS
AWS_ACCESS_KEY_ID="your_aws_access_key_id"
AWS_SECRET_ACCESS_KEY="your_aws_secret_access_key"
AWS_DEFAULT_REGION="us-east-1"

# Google Cloud
GOOGLE_APPLICATION_CREDENTIALS="${HOME}/.gcloud/credentials.json"
GCP_PROJECT_ID="your-gcp-project"

# Azure
AZURE_SUBSCRIPTION_ID="your-subscription-id"
AZURE_TENANT_ID="your-tenant-id"

# ============================================================================
# Databases
# ============================================================================
POSTGRES_URL="postgresql://localhost:5432/default"
MONGODB_URL="mongodb://localhost:27017"
REDIS_URL="redis://localhost:6379"

# ============================================================================
# AI/ML Services
# ============================================================================
ANTHROPIC_API_KEY="sk-ant-your_anthropic_key_here"
OPENAI_API_KEY="sk-your_openai_key_here"
HUGGINGFACE_TOKEN="hf_your_huggingface_token_here"

# ============================================================================
# Project Management & Communication
# ============================================================================
JIRA_URL="https://your-company.atlassian.net"
JIRA_TOKEN="your_jira_api_token"
JIRA_EMAIL="your.email@company.com"

SLACK_TOKEN="xoxb-your-slack-bot-token"
CONFLUENCE_URL="https://your-company.atlassian.net/wiki"
CONFLUENCE_TOKEN="your_confluence_token"

# ============================================================================
# DevOps & Infrastructure
# ============================================================================
KUBECONFIG="${HOME}/.kube/config"
DOCKER_HOST="unix:///var/run/docker.sock"
TERRAFORM_CLOUD_TOKEN="your_terraform_cloud_token"

# ============================================================================
# Monitoring & Analytics
# ============================================================================
DATADOG_API_KEY="your_datadog_api_key"
PROMETHEUS_URL="http://localhost:9090"
SENTRY_DSN="https://xxx@sentry.io/xxx"

# ============================================================================
# Memory Bank (for persistent profile)
# ============================================================================
MEMORY_BANK_ROOT="${HOME}/.aidev/memory-banks"

# ============================================================================
# Path Expansions
# ============================================================================
HOME="${HOME}"
PWD="${PWD}"
